generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  description String?
  icon        String
  id          Int        @default(autoincrement()) @id
  name        String     @unique
  parent      Int?       @default(0)
  url         String     @unique
  img         String?
  products    Product[]  @relation(references: [id])
}

model ImageCat {
  category_id Int?
  id          Int       @default(autoincrement()) @id
  url         String
  category    Category? @relation(fields: [category_id], references: [id])

  @@index([category_id], name: "Image_Category_id_fk")
}

model Product {
  description String?
  icon        String
  id          Int         @default(autoincrement()) @id
  img         String?
  name        String      @unique
  price       Int
  url         String      @unique
  categories  Category[]  @relation(references: [id])
}
